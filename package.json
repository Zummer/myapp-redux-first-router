{
  "name": "myapp",
  "description": "Forked from Universal Redux-First Router Demo",
  "version": "0.0.1",
  "main": "server/index.js",
  "author": "Dmitry Afanasev <dima@afanasiev.xyz>",
  "license": "MIT",
  "scripts": {
    "start:hotreload": "cross-env NODE_ENV=hotreload NODE_OPTIONS=--inspect=0.0.0.0 wp --config ./webpack.config",
    "start:webpack-watch": "cross-env NODE_ENV=development NODE_OPTIONS=--inspect=0.0.0.0 wp --config ./webpack.config",
    "start:server": "NODE_ENV=development node_modules/.bin/nodemon --inspect=0.0.0.0 -r ts-node/register server",
    "build": "cross-env NODE_ENV=production webpack --progress -p --config ./webpack.config",
    "precommit": "lint-staged",
    "cm": "git-cz",
    "lint": "eslint --fix src server webpack",
    "eslint": "eslint . --ext .js,.jsx",
    "eslint-fix": "eslint --fix --ext .js,.jsx .",
    "prettier": "prettier --write \"**/*.+(js|jsx|json|css)\"",
    "stylelint": "stylelint \"src/**/*.css\"",
    "stylelint-fix": "stylelint --fix \"src/**/*.css\"",
    "format": "prettier --single-quote --semi=false --write '{src,server,webpack}/**/*.js' && npm run lint"
  },
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "crypto": "^1.0.1",
    "fetch-everywhere": "^1.0.5",
    "history": "^4.6.3",
    "koa": "^2.9.0",
    "koa-bodyparser": "^4.3.0",
    "koa-mount": "^4.0.0",
    "koa-passport": "^4.1.3",
    "koa-router": "^8.0.8",
    "mongoose": "^5.10.13",
    "mongoose-beautiful-unique-validation": "^7.1.1",
    "passport-local": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^7.2.0",
    "react-universal-component": "^4.5.0",
    "redux": "^4.0.5",
    "redux-devtools-extension": "^2.13.2",
    "redux-first-router": "^2.1.5",
    "redux-first-router-link": "^2.1.1",
    "reselect": "^3.0.1",
    "uuid": "^8.3.1",
    "webpack-flush-chunks": "^2.0.3"
  },
  "devDependencies": {
    "@types/node": "^14.14.10",
    "@types/react": "^16.14.2",
    "@types/react-dom": "^16.9.10",
    "bluebird": "^3.5.1",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^2.9.6",
    "copy-webpack-plugin": "^6.3.2",
    "cross-env": "^5.2.1",
    "css-loader": "^0.28.7",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "^7.7.0",
    "eslint-config-airbnb": "*",
    "eslint-config-prettier": "^6.11.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-flowtype": "^2.32.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsx-a11y": "^6.3.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.20.6",
    "eslint-plugin-standard": "^4.0.1",
    "extract-css-chunks-webpack-plugin": "^4.7.5",
    "flow-bin": "^0.57.2",
    "fork-ts-checker-webpack-plugin": "^6.0.5",
    "husky": "^0.14.3",
    "import-fresh": "^3.2.1",
    "jest": "^21.2.1",
    "lint-staged": "^4.2.3",
    "mini-css-extract-plugin": "^0.9.0",
    "nodemon": "^2.0.6",
    "prettier": "^2.2.1",
    "react-hot-loader": "^4.12.21",
    "rimraf": "^2.6.1",
    "stats-webpack-plugin": "^0.7.0",
    "style-loader": "^1.3.0",
    "stylelint": "^13.6.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-prettier": "^1.1.2",
    "travis-github-status": "^1.4.0",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.1.0",
    "typescript": "^4.1.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-merge": "^4.2.2",
    "webpack-nano": "^1.1.1",
    "webpack-plugin-serve": "^1.2.1",
    "webpack-shell-plugin-next": "^1.2.0",
    "write-file-webpack-plugin": "^4.5.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{js,jsx}": "eslint",
      "*.{css}": "stylelint"
    }
  }
}
